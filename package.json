{
  "version": "0.3.0",
  "main": "output/index.js",
  "types": "output/index.d.ts",
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": [
      "yyl-react"
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/output",
    "/test"
  ],
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none",
    "printWidth": 100
  },
  "scripts": {
    "bootstrap": "yarn install & npm run prettier",
    "eslint": "eslint --ext=jsx,ts,tsx ./",
    "prettier": "prettier --write ./**",
    "dev": "rollup --config ./rollup.config.js",
    "d": "rollup --config ./rollup.config.js",
    "build": "cross-env NODE_ENV=production rollup --config ./rollup.config.js",
    "w": "rollup --watch --config ./rollup.config.js",
    "prepublishOnly": "npm run prettier && npm test",
    "test": "npm run build && jest ./test/jest/",
    "cba": "webpack -c ./test/case/base/webpack.config.js",
    "cbw": "webpack-cli serve --env tips=true --env hmr=true -c ./test/case/base/webpack.config.js"
  },
  "peerDependencies": {
    "webpack": ">=5.24.0",
    "yyl-base-webpack-config": ">=0.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "cross-env": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-yyl-react": "^0.1.9",
    "jest": "26.6.3",
    "prettier": "^2.0.4",
    "rollup": "^2.38.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "typedoc": "^0.20.20",
    "typedoc-plugin-markdown": "^3.4.5",
    "typescript": "^4.1.3",
    "webpack": "5.24.3",
    "webpack-cli": "4.7.2",
    "webpack-dev-server": "3.11.2",
    "yyl-base-webpack-config": "^0.3.0"
  },
  "name": "yyl-vue2-webpack-config",
  "license": "MIT",
  "dependencies": {
    "css-loader": "^5.2.4",
    "html-webpack-plugin": "5.3.0",
    "vue-loader": "^15.9.6",
    "vue-template-compiler": "^2.6.12",
    "webpack-merge": "^5.7.3"
  }
}
